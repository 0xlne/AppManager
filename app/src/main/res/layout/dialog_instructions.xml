<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_very_small"
        android:paddingEnd="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_very_small">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="@string/instructions_header"
            android:textStyle="italic"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adb_over_tcp"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <io.github.muntashirakon.AppManager.types.HyperlinkTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adb_over_tcp_description"
            android:textSize="@dimen/subtitle_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/main_window"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_window_description"
            android:textSize="@dimen/subtitle_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/app_details_window"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_details_window_description"
            android:textSize="@dimen/subtitle_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/one_click_ops_window"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_click_ops_window_description"
            android:textSize="@dimen/subtitle_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/exodus_window"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <io.github.muntashirakon.AppManager.types.HyperlinkTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exodus_window_description"
            android:textSize="@dimen/subtitle_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/shared_prefs_window"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shared_prefs_window_description"
            android:textSize="@dimen/subtitle_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/settings_window"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_window_description"
            android:textSize="@dimen/subtitle_font" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/miscellany"
            android:textSize="@dimen/title_font"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/miscellany_description"
            android:textSize="@dimen/subtitle_font" />

    </LinearLayout>

</ScrollView>
